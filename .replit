entrypoint = "main.py"
run = ["streamlit", "run", "main.py"]

modules = ["python-3.10"]

hidden = [".pythonlibs", ".streamlit"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "streamlit run --server.address 0.0.0.0 --server.enableWebsocketCompression=false --server.runOnSave=false --server.headless true --server.enableCORS=false main.py"]
ignorePorts = false
deploymentTarget = "gce"
deploymentSecrets = ["odoo"]

[[ports]]
localPort = 8501
externalPort = 80
exposeLocalhost = true
